namespace MiniML

kinds:
  var "x"

inductive Ty : Sig -> Type
| base : Ty s
| arrow : Ty s -> Ty s -> Ty s
| prod : Ty s -> Ty s -> Ty s
| sum : Ty s -> Ty s -> Ty s
| list : Ty s -> Ty s
| unit : Ty s

inductive Exp : Sig -> Type
| var : BVar s .var -> Exp s
| abs : Ty s -> Exp (s,x) -> Exp s
| app : Exp s -> Exp s -> Exp s
| let_ : Exp s -> Exp (s,x) -> Exp s
| letrec : Ty s -> Exp (s,x) -> Exp (s,x) -> Exp s
| pair : Exp s -> Exp s -> Exp s
| fst : Exp s -> Exp s
| snd : Exp s -> Exp s
| inl : Exp s -> Exp s
| inr : Exp s -> Exp s
| case_ : Exp s -> Exp (s,x) -> Exp (s,x) -> Exp s
| nil : Exp s
| cons : Exp s -> Exp s -> Exp s
| foldr : Exp s -> Exp s -> Exp s -> Exp s
| unit : Exp s
| fix : Exp (s,x) -> Exp s
| num : Nat -> Exp s
| succ : Exp s -> Exp s
| ifz : Exp s -> Exp s -> Exp (s,x) -> Exp s
